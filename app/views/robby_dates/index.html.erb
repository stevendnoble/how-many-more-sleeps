<div class="container text-center">
  <div class="row overflow">
    <div class="col-md-6">
      <div class="white text-center">
        <h2>Cuddle Dates</h2>
        <% @cuddle_dates.each do |date| %>
          <div class="row mb-8">
            <div class="col-xs-7 text-right">
              <%= date.cuddle_time.strftime("%a, %m/%d/%y") %>
            </div>
            <div class="col-xs-5 text-left">
              <%= button_to "Ã—", robby_date_path(date), method: :delete, class: "btn btn-sm btn-warning" %>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to "Add New", "javascript:void(0)", class: "btn btn-md btn-warning toggle-form-btn" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-1 col-xs-6 col-xs-offset-3">
      <div class="add-new-form">
        <%= form_for @new_cuddle_date do |f| %>
          <div class="form-group">
            <%= f.label :cuddle_time, class: "sr-only" %>
            <%= f.date_field :cuddle_time, min: Date.today, placeholder: "2017-12-25", class: "form-control" %>
            <%= f.submit "Add Date", class: "btn btn-sm btn-danger mt-16" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

